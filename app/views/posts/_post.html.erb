<div id="<%= dom_id post %>">
    <p>
        <strong> Title: </strong>
        <%= post.title %>
    </p>

    <p>
        <strong><%= pluralize post.comments.count, "comment" %></strong>
    </p>

    <p>
        <strong>Content:</strong>
        <%= post.content %>
    </p>

    <p>
        <%= link_to "Show this post", post %>
    </p>
</div>
